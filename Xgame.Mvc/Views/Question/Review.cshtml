@model QuestionReviewModel
<div align="center">
    <h3>Reviewing the Question @Model.Id</h3>
</div>
<div class="container">

    <div class="form-group">
        <br />
        <div class="row">
            <div class="col-xs-2">
                <h4>Question:</h4>
            </div>
            <div class="col-xs-10">
                <textarea disabled class="form-control" rows="5" >@Model.QuestionText</textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @if (Model.QuestionImageUrl != null && Model.QuestionImageUrl.Length > 0)
            {
                <div class="col-xs-2">
                    <h4>Question Image:</h4>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <img src='@ViewData["QuestionImage"]' />
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <br />
        <div class="row">
            <div class="col-xs-2">
                <h4>Answer:</h4>
            </div>
            <div class="col-xs-10">
                <textarea disabled class="form-control" rows="5">@Model.AnswerText</textarea>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            @if (Model.QuestionImageUrl != null && Model.QuestionImageUrl.Length > 0)
            {
                <div class="col-xs-2">
                    <h4>Answer Image:</h4>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <img src='@ViewData["AnswerImage"]' />
                    </div>
                </div>
            }
        </div>
    </div>

    <div align="right">
        <a class="btn btn-primary btn-success" data-toggle="modal" data-target="#approveConfirmation">Approve</a>
        <a class="btn btn-primary btn-danger" asp-controller="Question" asp-action="Reject" asp-route-questionId="@Model.Id">Reject</a>
        <a class="btn btn-primary" asp-controller="Question" asp-action="QuestionList">Return</a>
    </div>

 </div>

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="approveConfirmation" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Approve the Question?</h4>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-primary btn-success" asp-controller="Question" asp-action="Approve" asp-route-questionId="@Model.Id">Yes</a>
                    <a class="btn btn-primary" data-dismiss="modal">No</a>
                </div>
            </div>
        </div>
    </div>
</div>