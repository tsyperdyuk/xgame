@model Xgame.Model.LoginModel
@{
    Layout = "~/Views/Account/_Layout.cshtml";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
        <div class="form-group">
        @Html.LabelFor(m => m.UserName, "Username", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { style = "width:200px;", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, "Password", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { style = "width:200px;", @class = "form-control" })
        </div>
    </div>    
  
    <div align="left">
        <input type="submit" class="btn btn-success" value="Submit" />
    </div>
 }
